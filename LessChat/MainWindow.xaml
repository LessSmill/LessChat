<Window x:Class="LessChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LessChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" Text="LessChat" FontSize="20" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" Margin="10">
            <ListBox x:Name="chatListBox" Margin="5" BorderThickness="1" BorderBrush="Black" Background="White" Height="221"/>
        </ScrollViewer>

        <TextBox x:Name="messageTextBox" Grid.Row="1" Margin="12,0,8,37" VerticalAlignment="Bottom"/>
        <Button x:Name="sendButton" Grid.Row="1" Content="Send" Width="75" Margin="10,0,10,5" VerticalAlignment="Bottom" Click="SendButton_Click"/>

        
    </Grid>
</Window>
