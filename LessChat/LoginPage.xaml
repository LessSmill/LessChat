<Window x:Class="LessChat.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LessChat"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <!-- Добавьте элементы управления для авторизации -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Username" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10" />
            <TextBox x:Name="usernameTextBox" Width="200" Height="30" Margin="0 0 0 10" />
            <Label Content="Password" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10" />
            <PasswordBox x:Name="passwordBox" Width="200" Height="30" Margin="0 0 0 10" />
            <Button x:Name="loginButton" Content="Login" Width="100" Height="30" Click="LoginButton_Click" />

            <Button x:Name="registerButton" Content="Register" Width="100" Height="30" Margin="0 20 0 0" Click="RegisterButton_Click" />
        </StackPanel>
    </Grid>
</Window>
