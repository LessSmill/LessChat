<Page x:Class="NewChatSednev.ListContacts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewChatSednev"
      Height="595" Width="900"
      Title="ListContacts">

    <Grid>
        <ListBox x:Name="ListSpisok" Style="{DynamicResource MainListBox}" MouseDoubleClick="ListSpisok_MouseDoubleClick" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image/>
                        <StackPanel Orientation="Vertical">
                            <Label Content="{Binding Path= UserName}"/>
                            <Label Content="{Binding Path= UserName}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="time"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
